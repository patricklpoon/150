import java.util.Scanner;

public class Main {

  public static void main(String[] args) {

    Scanner input = new Scanner(System.in);

    System.out.println("Input # of Sides: ");

    double ns = input.nextDouble();

    System.out.println("Input Length of Sides: ");

    double s = input.nextDouble();

    System.out.println("The area is: " + areaN(ns,s));
  }

  public static double areaN(double ns, double s) {

    return (ns*(s*s))/(4*Math.tan(Math.PI/ns));
  }
}
